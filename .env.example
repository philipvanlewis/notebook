# Notebook Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://notebook:notebook@localhost:5432/notebook
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AI PROVIDERS (at least one required)
# =============================================================================

# OpenAI - Chat, Embeddings, TTS
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic - Alternative chat provider (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google Gemini - Slides generation
GEMINI_API_KEY=your-gemini-key-here

# Ollama - Local models (optional, no key needed)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# TEXT-TO-SPEECH (for podcasts)
# =============================================================================

# ElevenLabs - High-quality voice synthesis (optional)
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# =============================================================================
# WEB SCRAPING
# =============================================================================

# Hyperbrowser - Web scraping service (optional)
# Alternative: Use built-in Playwright/BeautifulSoup (no key needed)
HYPERBROWSER_API_KEY=your-hyperbrowser-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development

# Backend
BACKEND_URL=http://localhost:8000
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# AWS S3 Compatible Storage (optional, defaults to local filesystem)
# S3_ENDPOINT=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=notebook-uploads

# =============================================================================
# DEFAULT AI MODELS (customize as needed)
# =============================================================================

# Default chat model
DEFAULT_CHAT_MODEL=gpt-4o
DEFAULT_CHAT_PROVIDER=openai

# Default embedding model
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
DEFAULT_EMBEDDING_PROVIDER=openai

# Default TTS model
DEFAULT_TTS_MODEL=tts-1
DEFAULT_TTS_PROVIDER=openai
